@page
@model PetClinic.Pages.Admin.AdminManagePet.AdminViewPetListModel
@{
    Layout = null;
    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");
    var email = HttpContext.Session.GetString("Email");

    if (email != "admin@petclinic.com")
    {
        Response.Redirect("/Authentication/Login");
    }
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Pet Management</title>
    <link rel="stylesheet" href="~/css/khoiadminstyle.css" />
</head>
<body>

    @await Html.PartialAsync("_Header", Model)

    <div class="container">
        @await Html.PartialAsync("_Sidebar")

        <main class="main-content">
            <h1>Pet Management</h1>

            <div class="service-management">

                <form asp-page="/AdminViewPetList" method="get" class="form-inline">
                    <div class="form-group">
                        <label for="searchPetName">Find by Pet Name:</label>
                        <input type="text" id="searchPetName" name="searchPetName" value="@Model.searchPetName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="searchCustomer">Customer:</label>
                        <input type="text" id="searchCustomer" name="searchCustomer" value="@Model.searchCustomer" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="searchPetType">Pet Type:</label>
                        <select id="searchPetType" name="searchPetType" class="form-control">
                            <option value="">All</option>
                            @foreach (var petType in Model.petTypes)
                            {
                                <option value="@petType">@petType</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>

                <table class="service-table">
                    <thead>
                        <tr>
                            <th>Pet ID</th>
                            <th>Pet Name</th>
                            <th>Pet Type</th>
                            <th>Pet Age</th>
                            <th>Customer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pet in Model.petList)
                        {
                            <tr>
                                <td>@pet.PetId</td>
                                <td>@pet.PetName</td>
                                <td>@pet.PetType</td>
                                <td>@pet.PetAge</td>
                                <td>@pet.Customer?.FirstName</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Display error messages -->
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            
        </main>
    </div>

    @await Html.PartialAsync("_Footer")
</body>
</html>
