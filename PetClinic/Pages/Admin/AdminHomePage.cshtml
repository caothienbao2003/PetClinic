@page
@model PetClinic.Pages.Admin.AdminHomePageModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Home Page";

    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");
    var email = HttpContext.Session.GetString("Email");

    if (email != "admin@petclinic.com")
    {
        Response.Redirect("/Authentication/Login");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home Page</title>
    <link rel="stylesheet" href="~/css/khoiadminstyle.css">
</head>
<body>
    <header class="header">
        <div class="header-box-container">
            <div class="header-box">Revenue: $@Model.Revenue</div>
            <div class="header-box">Total Customers: @Model.TotalCustomers</div>
            <div class="header-box">Total Bookings: @Model.TotalBookings</div>
        </div>
        <div class="header-buttons">
            <button onclick="location.href='/Admin/AdminProfile'">Profile</button>
            <button onclick="location.href='/Authentication/Logout'">Logout</button>
            <button onclick="location.href='/Authentication/Login'">Login</button>
        </div>
    </header>

    <div class="container">
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a href="/Admin/AdminHomePage">Home</a></li>
                    <li><a href="/Admin/AdminManagePet/AdminViewPetList">Pet Management</a></li>
                    <li><a href="/Admin/AdminManageStaff/AdminViewStaffList">Staff Management</a></li>
                    <li><a href="/Admin/AdminManageDoctor/DoctorManagement">Doctor Management</a></li>
                    <li><a href="/Admin/AdminManageCustomer/CustomerManagement">Customer Management</a></li>
                    <li><a href="/Admin/AdminManageBooking/BookingManagement">Booking Management</a></li>
                    <li><a href="/Admin/AdminManageSchedule/ScheduleManagement">Schedule Management</a></li>
                    <li><a href="/Admin/AdminManageService/AdminViewServiceList">Service Management</a></li>
                    <li><a href="/Admin/AdminManageCage/CageManagement">Cage Management</a></li>
                    <li><a href="/Admin/AdminManageMedicine/MedicineManagement">Medicine Management</a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <section class="statistics">
                <h2>Average Rating: @Model.AverageRating</h2>
                <div class="graph" id="revenue-graph">
                    <h3>Revenue</h3>
                    <select id="revenue-filter">
                        <option value="day">Day</option>
                        <option value="month">Month</option>
                        <option value="year">Year</option>
                    </select>
                    <canvas id="revenueChart"></canvas>
                </div>
                <div class="graph" id="booking-graph">
                    <h3>Number of Bookings</h3>
                    <select id="booking-filter">
                        <option value="day">Day</option>
                        <option value="month">Month</option>
                        <option value="year">Year</option>
                    </select>
                    <canvas id="bookingChart"></canvas>
                </div>
                <div class="graph" id="customer-graph">
                    <h3>Number of Customers</h3>
                    <select id="customer-filter">
                        <option value="day">Day</option>
                        <option value="month">Month</option>
                        <option value="year">Year</option>
                    </select>
                    <canvas id="customerChart"></canvas>
                </div>
            </section>
        </main>
    </div>

    <footer>
        <p>&copy; 2024 Pet Clinic. All rights reserved.</p>
        <p>1234 Clinic Address, HCM, Viet Nam</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/adminHomePage.js"></script>
</body>
</html>
