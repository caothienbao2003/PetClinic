@page
@using PetClinicBussinessObject
@model PetClinic.Pages.Staff.CageManagement.IndexModel
@{
    ViewData["Title"] = "Cage Management View Page";

    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");

    if (userId == null || role != "1")
    {
        Response.Redirect("/Authentication/Login");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/luongstyle.css" />
    <style>
        /* Additional styles for fixing the header and navigation */
        .header {
            background-color: white;
            color: black;
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .navbar {
            background-color: green;
            overflow: hidden;
            display: flex;
            justify-content: center;
        }

            .navbar a {
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                .navbar a:hover {
                    background-color: #ddd;
                    color: black;
                }

        .content {
            padding: 20px;
        }

        .top-right-buttons {
            position: absolute;
            top: 10px;
            right: 20px;
        }

            .top-right-buttons button {
                margin-left: 10px;
                margin-right: 10px;
            }

        .user-info {
            position: absolute;
            top: 10px;
            right: 20px;
            display: flex;
            align-items: center;
        }

            .user-info span {
                color: black;
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <header class="header">
        <h1>Pet Clinic</h1>
    </header>

    <div class="navbar">
        <a asp-page="/Staff/BookingManagement/BookingHistory">Bookings</a>
        <a asp-page="/Staff/CageManagement/Index">Cages</a>
    </div>

    <div class="user-info">
        <span>Welcome, @Model.user.FirstName @Model.user.LastName!</span>
        <a asp-page="/Staff/StaffProfile"><button>View Profile</button></a>
        <a asp-page="/Authentication/Logout"><button>Logout</button></a>
    </div>

    <div class="content">
        <p>
            <a asp-page="Create" class="btn btn-success">Create New</a>
        </p>

        <div class="row">
            @foreach (var item in Model.Cage)
            {
                <div class="col-md-3">
                    <div class="cage-box">
                        <h3>@item.CageId</h3>
                        <div class="cage-actions">
                            <a asp-page="./HospitalizeList" asp-route-CageId="@item.CageId" class="btn btn-info">Hospitalize List</a>
                            @if (item.CageStatus == (int)CageStatus.Occupied)
                            {
                                <span class="badge badge-secondary">Already Hospitalized</span>
                            }
                            else
                            {
                                @if (item.ActiveStatus == (int)ActiveStatus.Active)
                                {
                                    <a asp-page="./CreateHospitalize" asp-route-CageId="@item.CageId" class="btn btn-warning">Hospitalize</a>
                                }
                                <form method="post" asp-page-handler="ToggleActiveStatus">
                                    <input type="hidden" name="cageId" value="@item.CageId" />
                                    <input type="hidden" name="currentStatus" value="@item.ActiveStatus" />
                                    <button type="submit" class="btn btn-primary">Change Availability</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <footer>
        © 2024 - PetClinic - <a href="/Privacy" style="color: white;">Privacy</a>
    </footer>
</body>
</html>
