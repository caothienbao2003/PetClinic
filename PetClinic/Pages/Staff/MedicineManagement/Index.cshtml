@model PetClinic.Pages.Staff.MedicineManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.medicineList[0].MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medicineList[0].MedicineDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medicineList[0].ActiveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.medicineList[0].MedicineType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.medicineList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineType.MedicineTypeId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MedicineId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MedicineId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MedicineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
