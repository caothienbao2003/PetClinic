@page
@model PublicModel
@{
    ViewData["Title"] = "Public Homepage";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Public Homepage</title>
    <link rel="stylesheet" href="~/css/luongstyle.css" />
</head>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Welcome to Our Pet Clinic</h1>
            <p>We provide comprehensive veterinary care for your beloved pets.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>What Our Clients Say</h2>
            <div id="reviewsCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @* @foreach (var review in Model.Reviews)
                    {
                        <div class="carousel-item @(review == Model.Reviews.First() ? "active" : "")">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-text">@review.Content</p>
                                    <p class="card-text"><strong>- @review.Author</strong></p>
                                </div>
                            </div>
                        </div>
                    } *@
                </div>
                <a class="carousel-control-prev" href="#reviewsCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#reviewsCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Search for Pet Services</h2>
            <form asp-page="/Search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for services" name="query" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2>Latest Articles</h2>
            <div class="row">
                @* @foreach (var article in Model.Articles)
                {
                    <div class="col-md-4">
                        <div class="card">
                            <img src="@article.ImageUrl" class="card-img-top" alt="@article.Title">
                            <div class="card-body">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@article.Excerpt</p>
                                <a href="/Articles/@article.Slug" class="btn btn-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                } *@
            </div>
        </div>
    </div>
</div>

<div class="top-right-buttons">
    <a href="/Login" class="btn btn-primary">Login</a>
    <a href="/Register" class="btn btn-primary">Register</a>
</div>

<style>
    .top-right-buttons {
        position: absolute;
        top: 20px;
        right: 20px;
    }
</style>