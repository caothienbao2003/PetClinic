@page
@model LoginModel
@{
}

<head>
	<link rel="stylesheet" href="~/css/khoistyle.css" />
	<!-- Other head content -->
</head>

<div class="login-container">
	<h2 class="text-center">LOGIN</h2>

	<div class="login-form">
		<form method="post">
			<div class="form-group">
				<label>Email</label>
				<input type="text" asp-for="email" class="form-control" />
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" asp-for="password" class="form-control" />
			</div>

			<div class="form-group form-submit-button">
				<button type="submit" class="btn btn-primary btn-block" asp-page-handler="Login">Login</button>
			</div>

		</form>
	</div>

	<div class="register-link">
		<label>Or&nbsp;</label><a asp-page="CustomerRegister">Register</a>
	</div>

	</br></br></br>

	<div class="form-group form-submit-button">
		<a class="btn btn-primary" asp-page-handler="ExternalLogin" asp-route-provider="Google">Login with Google</a>
	</div>

</div>
