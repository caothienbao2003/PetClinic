@page
@using PetClinicBussinessObject
@model HospitalizeListModel
@{
    ViewData["Title"] = "Hospitalize List";
    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");

    if (userId == null || role != "2")
    {
        Response.Redirect("/Authentication/Login");
    }
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pet Clinic Homepage</title>
    <link rel="stylesheet" href="~/css/luongstyle.css" />
</head>

<div class="user-info">
    <span>Welcome, @Model.user.FirstName @Model.user.LastName!</span>
    <a asp-page="/Doctor/DoctorProfile"><button>View Profile</button></a>
    <a asp-page="/Authentication/Logout"><button>Logout</button></a>
</div>

<header>
    <h1>History Log</h1>
</header>

<nav class="navbar navbar-expand-sm">
    <a asp-page="/Doctor/BookingView">Bookings</a>
    <a asp-page="/Doctor/HospitalizeList">Hospitalization</a>
    <a asp-page="/Doctor/ScheduleManagement/ViewSchedule">View Schedule</a>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].Pet!.PetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].Pet!.PetAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].Pet!.PetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].InTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].OutTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].CageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospitalizes[0].ActiveStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Hospitalizes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pet!.PetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pet!.PetAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pet!.PetType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OutTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CageId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActiveStatus)
                </td>

                <td>
                    @if (item.OutTime == null)
                    {
                        <a data-bs-toggle="collapse" href="#collapseLog_@item.HospitalizeId"> Enter current Log </a>
                        <form method="post" asp-page-handler="EndHospitalize">
                            <input type="hidden" name="HospitalizeId" value="@item.HospitalizeId" />
                            <input type="hidden" name="CageId" value="@Model.CageId" />
                            <input type="submit" value="End Hospitalize" class="btn btn-primary" />
                        </form>
                    }
                    else
                    {
                        <a data-bs-toggle="collapse" href="#collapseLog_@item.HospitalizeId"> History Logs </a>
                    }

                </td>
            </tr>
            <tr class="collapse" id="collapseLog_@item.HospitalizeId">
                <td colspan="7">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>DateTime</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in item.HospitalizeLogs)
                            {
                                <tr class="@(log.ActiveStatus == (int)ActiveStatus.UnActive ? "text-decoration-line-through" : "")">
                                    <td>@log.DateTime</td>
                                    <td>@log.Description</td>
                                    <td>
                                        @if (log.ActiveStatus == (int)ActiveStatus.Active && item.OutTime == null)
                                        {
                                            <form method="post" asp-page-handler="ToggleLogStatus">
                                                <input type="hidden" name="LogId" value="@log.HospitalizeLogId" />
                                                <input type="hidden" name="CageId" value="@Model.CageId" />
                                                <button type="submit" class="btn btn-secondary">Delete</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (item.OutTime == null)
                    {
                        <form method="post" asp-page-handler="CreateLog">
                            <input type="hidden" name="HospitalizeId" value="@item.HospitalizeId" />
                            <input type="hidden" name="CageId" value="@Model.CageId" />
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" name="Description" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Add Log" class="btn btn-primary" />
                            </div>
                        </form>
                    }

                </td>
            </tr>

        }
    </tbody>
</table>
<div>
    <a asp-page="DoctorHomePage">Back to Home</a>
</div>
