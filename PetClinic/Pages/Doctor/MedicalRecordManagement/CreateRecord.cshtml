        function submitVaccinationRecord() {
            const formData = {
                VaccinationDate: $('#VaccinationDate').val(),
                NextDueDate: $('#NextDueDate').val(),
                VaccinatedAt: $('#VaccinatedAt').val(),
                MedicineId: $('#MedicineId').val(),
                Verification: $('#Verification').val()
            };

            $.post('@Url.Page("/Doctor/MedicalRecordManagement/CreateRecord", "OnPostAddVaccination")', formData)
            .done(function () {
                $('#addVaccinationModal').modal('hide');
                location.reload();
            })
            .fail(function (jqXHR, textStatus, errorThrown) {
                alert("Error adding vaccination record: " + errorThrown);
            });
        }
    </script>
