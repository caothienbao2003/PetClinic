@page
@model PetClinic.Pages.Doctor.MedicalRecordManagement.CreateRecordModel

@{
    ViewData["Title"] = "Create Medical Record for" + $" Booking {Model.BookId}";
}

<h1>Medical Record</h1>

<h4>@ViewData["Title"]</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Pet Details -->
            <div class="form-group">
                <label asp-for="Book.Pet.PetName" class="control-label">Pet Name</label>
                <input type="text" class="form-control" value="@Model.Book.Pet.PetName" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Book.Pet.PetAge" class="control-label">Age</label>
                <input type="text" class="form-control" value="@Model.Book.Pet.PetAge" readonly />
            </div>
            <div class="form-group">s
                <label asp-for="Book.Pet.PetType" class="control-label">Type</label>
                <input type="text" class="form-control" value="@Model.Book.Pet.PetType" readonly />
            </div>

            <!-- Pet Health Information -->
            <div class="form-group">
                <label asp-for="PetHealthInfo.Conditions" class="control-label">Conditions</label>
                <input type="text" class="form-control" value="@Model.PetHealthInfo.Conditions" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PetHealthInfo.Weight" class="control-label">Weight</label>
                <input type="text" class="form-control" value="@Model.PetHealthInfo.Weight" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PetHealthInfo.WeightMeasurementDate" class="control-label">Weight Measurement Date</label>
                <input type="text" class="form-control" value="@Model.PetHealthInfo.WeightMeasurementDate" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PetHealthInfo.OverallHealth" class="control-label">Overall Health</label>
                <input type="text" class="form-control" value="@Model.PetHealthInfo.OverallHealth" readonly />
            </div>

            <!-- Vaccination Record -->
            <h3>Vaccination Record</h3>
            @if (Model.records != null && Model.records.Count > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Vaccination Record ID</th>
                            <th>Vaccination Date</th>
                            <th>Next Due Date</th>
                            <th>Vaccinated At</th>
                            <th>Verification</th>
                            <th>Medicine Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.records)
                        {
                            <tr>
                                <td>@record.VaccinationRecordId</td>
                                <td>@record.VaccinationDate</td>
                                <td>@record.NextDueDate</td>
                                <td>@record.VaccinatedAt</td>
                                <td>@record.Verification</td>
                                <td>@record.MedicineId</td> 
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No vaccination records available.</p>
            }

            <!-- Medical Information -->
            <div class="form-group">
                <label asp-for="MedicalRecord.MedicalRecordDescription" class="control-label"></label>
                <input asp-for="MedicalRecord.MedicalRecordDescription" class="form-control" />
                <span asp-validation-for="MedicalRecord.MedicalRecordDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalRecord.DoctorId" class="control-label"></label>
                <select asp-for="MedicalRecord.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
            </div>

            <div class="form-group">
                <label asp-for="MedicalRecord.ServiceId" class="control-label"></label>
                <select asp-for="MedicalRecord.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (Model.IsMedicalRecordCreated)
    {
        @*<a href="/Doctor/Prescription/Create" class="btn btn-success">Create Prescription</a>*@
        <a asp-page="/Doctor/MedicalRecordManagement/CreatePrescription" asp-route-medicalRecordId="@Model.MedicalRecord.MedicalRecordId" class="btn btn-success">Create Prescription</a>
        <a href="Index" class="btn btn-success">Back to List</a>
    }
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
