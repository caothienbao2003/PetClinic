        function submitVaccinationRecord(event) {
            event.preventDefault(); // Prevent the form from submitting the traditional way

            const formData = new FormData(document.getElementById('addVaccinationForm'));
            formData.append('NewVaccinationRecord.PetHealthId', @Model.PetHealthInfo.PetHealthId);
            formData.append('NewVaccinationRecord.Verification', document.getElementById('Verification').value);

            fetch('@Url.Page("CreateRecord", "AddVaccination")', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    // Update the vaccination records table
                    const tbody = document.querySelector('table tbody');
                    tbody.innerHTML = ''; // Clear existing rows
                    data.forEach(record => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                        <td>${record.vaccinationRecordId}</td>
                        <td>${record.vaccinationDate}</td>
                        <td>${record.nextDueDate}</td>
                        <td>${record.vaccinatedAt}</td>
                        <td>${record.verification}</td>
                        <td>${record.medicineId}</td>
                        <td>
                            <button type="button" class="btn btn-secondary" onclick="toggleVerificationStatus(${record.vaccinationRecordId}, ${record.verification})">Toggle Verification</button>
                        </td>
                    `;
                        tbody.appendChild(row);
                    });

                    $('#addVaccinationModal').modal('hide');
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }


