@page
@model PetClinic.Pages.BookingManagement.ChoosePetModel
@{
    Layout = null;
    ViewData["Title"] = "Choose Pet Page";

    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");
    var email = HttpContext.Session.GetString("Email");

    if (userId == null || role != "0")
    {
        Response.Redirect("/Authentication/Login");
    }
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pet Clinic Homepage</title>
    <link rel="stylesheet" href="~/css/luongstyle.css" />
    <link rel="stylesheet" href="~/css/customerBookingChoosePet.css" />

</head>

<header>
    <h1>Pet Clinic</h1>
</header>

<nav class="navbar navbar-expand-sm">
    <a asp-page="/Customer/CustomerHomePage">Home</a>
    <a asp-page="/Customer/BookingManagement/BookingHistory">View Bookings</a>
    <a asp-page="/Customer/PetManagement/Index">My Pets</a>
    <a asp-page="/Customer/PetHealthManagement/Index">Pet Healths</a>
    <a asp-page="/VaccinationManagement/Index">Vaccinations</a>
    <a asp-page="/Customer/HospitalizationView/HospitalizationView">Hospitalizations</a>
</nav>

<div class="choose-pet-container">
    <h1 class="choose-pet-header">Choose Pet</h1>

    @if (Model.PetList == null || Model.PetList.Count == 0)
    {
        <div class="empty-pet-list-message">
            Your pet list is empty <a asp-page="/Customer/PetManagement/Create">Click here to create a pet</a>
        </div>
    }
    else
    {
        <div class="form-container">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SelectedPetId" class="control-label">Pet Name</label>
                    <select asp-for="SelectedPetId" class="form-control" asp-items="ViewBag.PetList"></select>
                    <span asp-validation-for="SelectedPetId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Next" class="btn btn-primary" />
                </div>
            </form>
        </div>
    }

    <div class="back-to-list-container">
        <a asp-page="BookingHistory" class="back-to-list-link">Back to List</a>
    </div>
</div>
