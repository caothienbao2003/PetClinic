@page
@model PetClinic.Pages.Customer.PetManagement.DeleteModel

@{
    ViewData["Title"] = "Pet Management Delete Page";

    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");

    if (userId == null || role != "0")
    {
        Response.Redirect("/Authentication/Login");
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8f5;
        color: #333;
    }

    .container {
        margin: 0 auto;
        padding: 20px;
        max-width: 600px;
        text-align: center;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

        .row dt {
            font-weight: bold;
            color: #2e7d32;
        }

        .row dd {
            margin-left: 0;
        }

    .btn {
        padding: 10px 20px;
        margin: 5px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn-danger {
        background-color: #d32f2f;
        color: white;
    }

    .btn-secondary {
        background-color: #388e3c;
        color: white;
    }

    h1, h3 {
        color: #2e7d32;
    }

    hr {
        border: 1px solid #ddd;
    }
</style>

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this pet?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt>
                Name of the Pet
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pet.PetName)
            </dd>
            <dt>
                Animal Type
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pet.PetType)
            </dd>
            <dt>
                Age
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pet.PetAge)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Pet.PetId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
