@page
@model PetClinic.Pages.Customer.PetManagement.EditModel
@{
    ViewData["Title"] = "Pet Management Edit Page";

    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");

    if (userId == null || role != "0")
    {
        Response.Redirect("/Authentication/Login");
    }
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetId" />
            <input type="hidden" asp-for="Pet.CustomerId" />
            <input type="hidden" asp-for="Pet.ActiveStatus" />
            <input type="hidden" asp-for="PetHealth.PetHealthId" />
            <input type="hidden" asp-for="PetHealth.PetId" />
            <div class="form-group">
                <label asp-for="Pet.PetName" class="control-label"></label>
                <input asp-for="Pet.PetName" class="form-control" />
                <span asp-validation-for="Pet.PetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.PetType" class="control-label"></label>
                <input asp-for="Pet.PetType" class="form-control" />
                <span asp-validation-for="Pet.PetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.PetAge" class="control-label"></label>
                <input asp-for="Pet.PetAge" class="form-control" />
                <span asp-validation-for="Pet.PetAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetHealth.OverallHealth" class="control-label"></label>
                <input asp-for="PetHealth.OverallHealth" class="form-control" />
                <span asp-validation-for="PetHealth.OverallHealth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetHealth.Conditions" class="control-label"></label>
                <input asp-for="PetHealth.Conditions" class="form-control" />
                <span asp-validation-for="PetHealth.Conditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetHealth.Weight" class="control-label">Weight(kg)</label>
                <input asp-for="PetHealth.Weight" class="form-control" />
                <span asp-validation-for="PetHealth.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetHealth.WeightMeasurementDate" class="control-label"></label>
                <input asp-for="PetHealth.WeightMeasurementDate" class="form-control" />
                <span asp-validation-for="PetHealth.WeightMeasurementDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
