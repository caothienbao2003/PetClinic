@page
@model PetClinic.Pages.DoctorPages.MedicalRecords.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicalRecord[0].MedicalRecordDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalRecord[0].Booking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalRecord[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalRecord[0].Prescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalRecord[0].Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MedicalRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalRecordDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Booking.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prescription.PrescriptionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MedicalRecordId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MedicalRecordId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MedicalRecordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
