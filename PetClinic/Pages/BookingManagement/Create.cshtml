@page
@model PetClinic.Pages.BookingManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.PetId" class="control-label"></label>
                <select asp-for="Booking.PetId" class ="form-control" asp-items="ViewBag.PetId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.DoctorId" class="control-label"></label>
                <select asp-for="Booking.DoctorId" class ="form-control" asp-items="ViewBag.DoctorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ShiftId" class="control-label"></label>
                <select asp-for="Booking.ShiftId" class ="form-control" asp-items="ViewBag.ShiftId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ServiceId" class="control-label"></label>
                <select asp-for="Booking.ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PaymentStatus" class="control-label"></label>
                <input asp-for="Booking.PaymentStatus" class="form-control" />
                <span asp-validation-for="Booking.PaymentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Status" class="control-label"></label>
                <input asp-for="Booking.Status" class="form-control" />
                <span asp-validation-for="Booking.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
