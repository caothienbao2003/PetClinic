@model PetClinic.Pages.VaccinationManagement.DetailsModel
@{
    ViewData["Title"] = "Vaccination Management Details Page";

    var userId = HttpContext.Session.GetString("UserId");
    var role = HttpContext.Session.GetString("Role");

    if (userId == null || role != "2" || role != "1" || role != "0")
    {
        Response.Redirect("/Authentication/Login");
    }
}

